doctype html
html(lang="en")

  head
    //title="Titles Will Go In Their Own Jade File That Extend Layout"
        
    <!-- Default scripts to include -->
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css")
    script(src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js')
        
    <!-- Scales the website for mobile devices -->
    meta( name="viewport" content="width=device-width, initial-scale=0.75")
        
    <!-- Dashboard on the side, from Bootstrap website -->
    link(rel='stylesheet' href='/css/dashboard.css')
        
    <!-- Other scripts in the web pages that will be used -->
    block scripts
        
  body

    // Navbar at the top.
    nav(class="navbar navbar-inverse navbar-fixed-top")
      div(class="container-fluid")
      
        // The navigation header that always shows on the page regardless of width
        div(class="navbar-header")
        
          // This button in the navbar appears when the screen gets <768px.
          button(class="navbar-toggle collapsed" type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
          
            span(class="sr-only") Toggle navigation
            
            // The three lines that appear inside the button.
            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")
            
          // The Big Text that appears at the left of the header.
          a(href="#" class="navbar-brand") FFR Wiki Tools
        
        // The menu items available in navigation. These get collapsed when the screen gets too small.
        div(id="navbar" class="navbar-collapse collapse")
        
          // Menu items that navigate to other pages.
          ul(class="nav navbar-nav navbar-right")
            li
              a(href="/") Home
            li
              a(href="/tasks.html") Task Progress
            li
              a(href="/wikicode.html") Wiki Code Creator
            li
              a(href="/nps_page.html") NPS Image Page
            li
              a(href="/contact.html") Contact Us
              
    // End top navbar div
    
    // Main Page div
    div(class="container-fluid")
      
      // Main content row where all the content goes on the page.
      div(class="row")
      
        // Sidebar that appears at the left of the page. This will disappear when the page gets <768px.
        div(class="col-sm-3 col-md-2 sidebar")
          ul(class="nav nav-sidebar")
          
            // Main Page Navigation
            li
              a(href="/") Home
            li
              a(href="/tasks.html") Task Progress
            li
              a(href="/wikicode.html") Wiki Code Creator
            li
              a(href="/contact.html") Contact Us
              
            // In the future, these placeholder links will change to show what tasks remain for individual statuses.
            li(class="nav-divider")
            li
              a(href="tasksnotstarted.html") To Do
            li
              a(href="tasksinprogress.html") In Progress
            li
              a(href="tasksdone.html") Done
              
        // End sidebar div
        
        // This is where all the page content goes to the right of the sidebar.
        // Middle of Page where main content is. We need the offsets here due to the sidebar on the left
        div(class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main")
        
          block content

      // Divider for copyright section
      hr(class="featurette-divider")
      
      // Copyright footer at the bottom
      footer
        div(class="row")
          // We need the offsets here due to the sidebar on the left
          div(class="col-xs-12 col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2")
          
            // Back to top link to go back to the top of the page
            p(class="pull-right")
              a(href="#") Back to top
              
            // Left side of the footer, where copyright stuff goes
            p
              | &#169; 2015 Flash Flash Revolution&nbsp;
              strong &#8226;
              | &nbsp;
              a(href="#") Privacy
              | &nbsp;
              strong &#8226;
              | &nbsp;
              a(href="#") Terms
              
    // End Main Page Div